<% provide(:title, 'Sign up') %>
<h2>Sign up</h2>

<div>
  <div>
    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <p></p><%= f.submit "Create my account", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
</div>